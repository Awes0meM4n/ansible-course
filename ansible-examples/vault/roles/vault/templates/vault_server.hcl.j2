listener "tcp" {
  address          = "127.0.0.1:{{ vault_port }}"
  cluster_address  = "{{ ansible_eth1.ipv4.address }}:{{ vault_peer_port }}"
  tls_disable      = "true"
}

storage "consul" {
  address = "127.0.0.1:{{ consul_port }}"
  path    = "vault/"
}

api_addr = "http://{{ ansible_eth1.ipv4.address }}:{{ vault_port }}"
